name: tictactoe-nakama
data_dir: "./data/"

logger:
  level: "DEBUG"
  stdout: true
  file: ""

console:
  port: 7351
  username: "admin"
  password: "password"
  signing_key: "defaultsigningkey"
  max_message_size_bytes: 4096

socket:
  server_key: "defaultkey"
  port: 7350
  max_message_size_bytes: 4096
  read_buffer_size_bytes: 4096
  write_buffer_size_bytes: 4096
  ping_period_ms: 15000
  pong_wait_ms: 25000
  write_wait_ms: 10000
  outgoing_queue_size: 64

session:
  token_expiry_sec: 7200
  refresh_token_expiry_sec: 86400

runtime:
  js_entrypoint: "index.js"
